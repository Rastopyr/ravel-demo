{{#with details as |contact|}}
  <div class="contact contact-banner">
    <div class="photo-wrapper">
      <img src="{{contact.picture}}" alt="">
    </div>
    <div class="information">
      <h2 class="light name">{{contact.firstName}} {{contact.lastName}}</h2>
      <p class="light-blue title-company">
        {{contact.jobTitle}} at {{contact.company}}
      </p>
    </div>
  </div>
  <div class="contact-details">
    <div class="contact-section">
      <h4 class="section-title">Contact</h4>
      <div class="contact-items">
          <div>
            <div class="icon">{{fa-icon 'phone'}}</div>
            <div class="phone">{{if contact.phone contact.phone 'No phone'}}</div>
          </div>
          <div>
            <div class="icon">{{fa-icon 'envelope-o'}}</div>
            <div class="email">{{contact.email}}</div>
          </div>
          <div>
            <div class="icon">{{fa-icon 'birthday-cake'}}</div>
            <div class="birthday">{{contact.birthday}}</div>
          </div>
      </div>
    </div>
  </div>
{{else}}
  <div class="contact-details">
    <h1>Not selected contact</h1>
  </div>
{{/with}}
